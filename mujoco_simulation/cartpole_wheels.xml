<mujoco>
    <option gravity="0 0 -9.81"/>
    <worldbody>
        <light diffuse=".5 .5 .5" pos="0 0 10" dir="0 0 -1"/>
        <geom type="plane" size="2 2 0.1" rgba="1 1 1 1"/>
        
        <!-- Cart -->
        <body name="cart" pos="0 0 0.1">
            <!-- Cart motion restricted to x-axis -->
            <joint name="cart_joint" type="slide" axis="1 0 0"/>
            <geom name="cart_body" type="box" size="0.2 0.1 0.05" rgba="0.2 0.6 0.8 1"/>
            
            <!-- Wheels -->
            <!-- Front left wheel -->
            <body name="front_left_wheel" pos="-0.15 0.12 -0.05">
                <joint name="front_left_hinge" type="hinge" axis="0 1 0"/>
                <geom name="front_left_wheel" type="cylinder" size="0.05 0.02" pos="0 0 0" axisangle="1 0 0 90" rgba="0.1 0.1 0.1 1"/>
            </body>
            
            <!-- Front right wheel -->
            <body name="front_right_wheel" pos="-0.15 -0.12 -0.05">
                <joint name="front_right_hinge" type="hinge" axis="0 1 0"/>
                <geom name="front_right_wheel" type="cylinder" size="0.05 0.02" pos="0 0 0" axisangle="1 0 0 90" rgba="0.1 0.1 0.1 1"/>
            </body>
            
            <!-- Rear left wheel -->
            <body name="rear_left_wheel" pos="0.15 0.12 -0.05">
                <joint name="rear_left_hinge" type="hinge" axis="0 1 0"/>
                <geom name="rear_left_wheel" type="cylinder" size="0.05 0.02" pos="0 0 0" axisangle="1 0 0 90" rgba="0.1 0.1 0.1 1"/>
            </body>
            
            <!-- Rear right wheel -->
            <body name="rear_right_wheel" pos="0.15 -0.12 -0.05">
                <joint name="rear_right_hinge" type="hinge" axis="0 1 0"/>
                <geom name="rear_right_wheel" type="cylinder" size="0.05 0.02" pos="0 0 0" axisangle="1 0 0 90" rgba="0.1 0.1 0.1 1"/>
            </body>

            <!-- Pendulum -->
            <body name="pendulum" pos="0 0 0.005">
                <!-- Pendulum motion restricted to xz-plane -->
                <joint name="pendulum_joint" type="hinge" axis="0 1 0" pos="0 0 0"/>
                <geom name="pendulum_body" type="cylinder" size="0.02 0.25" pos="0 0 0.25" rgba="0.8 0.2 0.2 1"/>
                <site name="pendulum_tip" pos="0 0 0.505" size="0.05" rgba="0 0 1 1"/>
            </body>
        </body>
    </worldbody>

    <!-- Sensors -->
    <sensor>
        <!-- Measure cart position -->
        <jointpos joint="cart_joint"/>
        <!-- Measure pendulum angle -->
        <jointpos joint="pendulum_joint"/>
    </sensor>

    <!-- Actuators -->
    <actuator>
        <!-- Motor for cart -->
        <motor name="cart_motor" joint="cart_joint" ctrlrange="-10 10"/>
    </actuator>
</mujoco>
